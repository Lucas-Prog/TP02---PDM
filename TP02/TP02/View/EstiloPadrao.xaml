<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TP02.View.EstiloPadrao">
    <ContentPage.Content>
        <StackLayout Spacing="15">
            <Label Text="SHIFT - Xamarin"
                   HorizontalOptions="Center"
                   TextColor="Green"
                   FontSize="Medium"/>
            <Label Text="Aplicativo Cross-Platform"
                   HorizontalOptions="Center"
                   TextColor="Green"
                   FontSize="Medium"/>
            
            

            <Entry Text="Estilo Baseado no baseStyle" 
                   BackgroundColor="Cyan"
                   HorizontalOptions="CenterAndExpand"/>
            
            <Button Text="Clique Aqui" 
                    TextColor="White" 
                    BackgroundColor="Blue"
                    HorizontalOptions="Center"
                    WidthRequest="150"/>
            
            <Button Text="SEM ESTILO"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>